<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Registration.RegisterActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:contentDescription="@string/todo"
                        android:focusable="true"
                        android:onClick="goback"
                        android:src="@drawable/back_to_home_button"
                        app:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/circle"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/img_register"
                            app:tint="@color/colorPrimary" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_userIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/ic_name"
                        app:tint="@color/white" />

                        <EditText
                            android:id="@+id/tv_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_box"
                            android:hint="@string/first_name"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp"
                            tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_userIcon2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/ic_name"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/tv_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_box"
                        android:hint="@string/last_name"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="15sp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_passwordIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        app:tint="@color/white" />

                        <EditText
                            android:id="@+id/tv_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_box"
                            android:hint="@string/password"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp"
                            tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_repasswordIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        app:tint="@color/white" />

                        <EditText
                            android:id="@+id/tv_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_box"
                            android:hint="@string/retype_password"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp"
                            tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgView_emailIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/img_email"
                        app:tint="@color/white" />

                        <EditText
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_box"
                            android:hint="@string/email"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp"
                            tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout5"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView_emailIcon3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@string/todo"
                        android:padding="8dp"
                        android:src="@drawable/ic_address"
                        app:tint="@color/white" />

                        <EditText
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_box"
                            android:hint="@string/address"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="15sp"
                            tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/chkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativeLayout6"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/i_agree_to_terms_and_conditions"
                    android:textColor="@color/colorPrimary"
                    app:buttonTint="@color/colorPrimary" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chkBox1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/signup"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>